<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#000"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/detcardview"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="8dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:id="@+id/detmovieimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#fff" />

            <TextView
                android:id="@+id/detmovietitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/detmovieimage"
                android:paddingLeft="5dp"
                android:text="Movie Title"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detmovietitle"
                android:layout_toRightOf="@id/detmovieimage"
                android:padding="5dp"
                android:text="Release Date:"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/detcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detrelease"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/detmovieimage"
                android:paddingLeft="5dp"
                android:text="Category:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detcategory"
                android:layout_toRightOf="@id/detmovieimage"
                android:paddingLeft="5dp"
                android:text="Rating:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dettime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detrating"
                android:layout_toRightOf="@id/detmovieimage"
                android:paddingLeft="5dp"
                android:text="Runtime:"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/detdirector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/detmovieimage"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Directed by:"
                android:textStyle="bold" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/relativeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detcardview">

        <TextView
            android:id="@+id/detactors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Actors:" />

        <TextView
            android:id="@+id/detwriter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detactors"
            android:padding="5dp"
            android:text="Writers:" />

        <TextView
            android:id="@+id/detplot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detwriter"
            android:padding="5dp"
            android:text="Plot:" />

        <TextView
            android:id="@+id/detboxoffice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detplot"
            android:padding="5dp"
            android:text="Box Office:" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
